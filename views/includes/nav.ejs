<header class="main-header">
    <nav class="main-header__nav">
        <ul>
            <li><a href="/" class="<%= path === '/' ? 'active' : '' %>">Shop</a></li>
            <li><a href="/products" class="<%= path === '/products' ? 'active' : '' %>">Products</a></li>
            <% if (isAuthenticated) { %>
                <li><a href="/cart" class="<%= path === '/cart' ? 'active' : '' %>">Cart</a></li> 
                <li><a href="/checkout" class="<%= path === '/checkout' ? 'active' : '' %>">Checkout</a></li>
                <li><a href="/order" class="<%= path === '/order' ? 'active' : '' %>">Order</a></li>
                <li><a href="/admin/add-product" class="<%= path === '/admin/add-product' ? 'active' : '' %>">Add Product</a></li>
                <li><a href="/admin/products" class="<%= path === '/admin/products' ? 'active' : '' %>">Admin Shop</a></li>
            <% } %>
            <div class="login-logout">
                <% if (!isAuthenticated) { %> 
                    <li><a href="/auth/login" class="<%= path === '/login' ? 'active' : '' %>">Login</a></li>
                    <li><a href="/auth/signup" class="<%= path === '/signup' ? 'active' : '' %>">Signup</a></li>
                <% } else { %>
                    <li><%= user.name %></li>
                    <form action="/auth/logout" method="POST">
                        <button type="submit">Logout</button>
                    </form>
                <% } %>
            </div>
        </ul>
    </nav>
</header>